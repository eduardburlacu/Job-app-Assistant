# Docker Environment Configuration

# Ollama Settings
OLLAMA_BASE_URL=http://ollama:11434
JOB_ASSISTANT_PRIMARY_MODEL_NAME=llama3.1:8b
JOB_ASSISTANT_FALLBACK_MODEL_NAMES=["gemma2:9b", "qwen2.5:7b"]

# Application Settings
JOB_ASSISTANT_DEBUG=false
JOB_ASSISTANT_LOG_LEVEL=INFO
JOB_ASSISTANT_APP_NAME="Job Application Assistant"

# Web Interface
JOB_ASSISTANT_STREAMLIT_HOST=0.0.0.0
JOB_ASSISTANT_STREAMLIT_PORT=8501
JOB_ASSISTANT_STREAMLIT_THEME=light

# File Handling
JOB_ASSISTANT_MAX_FILE_SIZE_MB=10
JOB_ASSISTANT_ALLOWED_FILE_TYPES=[".pdf", ".docx", ".txt", ".md"]

# Performance
JOB_ASSISTANT_MAX_REQUESTS_PER_MINUTE=30
JOB_ASSISTANT_REQUEST_TIMEOUT=30

# Security
JOB_ASSISTANT_MAX_CONTENT_LENGTH=5000
JOB_ASSISTANT_MIN_CONTENT_LENGTH=100
